<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="360dp"/>
            <padding
                android:bottom="5dp" 
                android:left="2dp" 
                android:right="2dp"
                android:top="3dp" />
            
            <stroke
		        android:width="1.5px"
		        android:color="@color/touch_pink" />
        </shape>
    </item>  
    <item >
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="360dp"/>
            <padding
                android:bottom="5dp" 
                android:left="2dp" 
                android:right="2dp"
                android:top="3dp" />
            <stroke
		        android:width="1.5px"
		        android:color="@color/deep_pink" />
        </shape>
    </item>
	
</selector>
