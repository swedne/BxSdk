<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/title_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/txt_black_deep"
            android:textSize="@dimen/txt_size_16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/please_input_phone"
            android:inputType="number"
            android:maxLength="11"
            android:padding="@dimen/five"
            android:singleLine="true"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/txt_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/txt_black_deep"
            android:textSize="@dimen/txt_size_16sp" />

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toLeftOf="@+id/btn_get_verification"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="@string/please_input_verification"
            android:inputType="number"
            android:maxLength="6"
            android:padding="@dimen/five"
            android:singleLine="true"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/txt_size_14sp" />

        <com.zorasun.fangchanzhichuang.general.widget.timer.TimerTextView
            android:id="@+id/btn_get_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_verification"
            android:layout_alignParentRight="true"
            android:background="@color/title_bg"
            android:clickable="true"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:paddingTop="@dimen/five"
            android:text="@string/get_verification"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="密码"
            android:textColor="@color/txt_black_deep"
            android:textSize="@dimen/txt_size_16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="@string/please_input_pwd"
            android:maxLength="20"
            android:padding="@dimen/five"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/txt_size_14sp" />
    </LinearLayout>

</LinearLayout>