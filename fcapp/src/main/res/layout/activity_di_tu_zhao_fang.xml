<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.zorasun.fangchanzhichuang.section.index.DiTuZhaoFangActivity" >

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_base03" />

    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_quyu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/sanjiao_n"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="6dp"
                android:singleLine="true"
                android:text="区域 "
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/line"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_quyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/sanjiao_n"
                android:ellipsize="end"
                android:padding="6dp"
                android:singleLine="true"
                android:text="总价"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/line"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_leixing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_fangxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/sanjiao_n"
                android:ellipsize="end"
                android:padding="6dp"
                android:singleLine="true"
                android:text="房型"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_fangxing"
            android:layout_width="@dimen/line"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_paixu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_gengduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/sanjiao_n"
                android:ellipsize="end"
                android:padding="6dp"
                android:singleLine="true"
                android:text="更多"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/zufang_titleBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout="@layout/item_zufang_titlebar"
        android:visibility="gone" />

    <include
        android:id="@+id/newhouse_titleBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout="@layout/item_newhouse_titlebar"
        android:visibility="gone" />

    <View
        android:id="@+id/topline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/delete"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/white"
            android:padding="6dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_dingwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/dingwei"
                    android:drawablePadding="6dp"
                    android:text="定位"
                    android:textColor="@color/info_text_color"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_ditie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ditie"
                    android:drawablePadding="6dp"
                    android:text="地铁"
                    android:textColor="@color/info_text_color"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/rl_zhoubian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/zhoubian"
                    android:drawablePadding="6dp"
                    android:text="周边"
                    android:textColor="@color/info_text_color"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>