<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_outter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    android:padding="11dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_photo_return"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_photo_takephotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_single_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="拍照上传"
            android:textColor="@color/txt_black_deep"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info_photo_benjiphots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/layout_single_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="从手机相册选择"
            android:textColor="@color/txt_black_deep"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/info_photo_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/layout_single_selector"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/camera_cancel"
        android:textColor="@color/text_red"
        android:textSize="18sp" />

</RelativeLayout>