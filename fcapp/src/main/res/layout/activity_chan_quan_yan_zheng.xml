<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/title_base" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingTop="12dp"
        android:text="产权证号格式:"
        android:textColor="@color/info_text_color"
        android:textSize="@dimen/txt_size_14sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingTop="12dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_radiobutton"
            android:drawablePadding="6dp"
            android:text="自定义"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:button="@null"
              android:gravity="left"
            android:drawableLeft="@drawable/selector_radiobutton"
            android:drawablePadding="6dp"
            android:text="厦地房证第XXXXX号"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:button="@null"
              android:gravity="left"
            android:drawableLeft="@drawable/selector_radiobutton"
            android:drawablePadding="6dp"
            android:text="厦国土房证第XXXXX号"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radiobutton"
            android:drawablePadding="6dp"
              android:gravity="left"
            android:text="闽(XXXX)厦门市不动产权第XXXXXX号"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:id="@+id/textView2"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产权证号："
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:hint="自定义"
                android:textColor="@color/info_text_color"
                android:textColorHint="@color/txt_gray"
                android:textSize="@dimen/txt_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦地房证第"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />

            <EditText
                android:id="@+id/et_xiadi_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:text="号"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦国土房证第"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />

            <EditText
                android:id="@+id/et_xiaguo_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:maxLength="8"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:text="号"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闽("
                android:textColor="@color/info_text_color" />

            <EditText
                android:id="@+id/et_min_num"
                style="@style/text_style"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")厦门市不动产权第"
                android:textColor="@color/info_text_color" />

            <EditText
                android:id="@+id/et_budong_num"
                style="@style/text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号"
                android:textColor="@color/info_text_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="18dp"
        android:text="* 请填写以下其中一项"
        android:textColor="@color/txt_black_midle"
        android:textSize="@dimen/txt_size_12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:text="身份证件号："
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <EditText
            android:id="@+id/et_identityCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入身份证件号"
            android:paddingLeft="12dp"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:text="房东姓名："
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp" />

        <EditText
            android:id="@+id/et_host"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入房东姓名"
            android:paddingLeft="12dp"
            android:textColor="@color/info_text_color"
            android:textSize="@dimen/txt_size_14sp"
            android:windowSoftInputMode="adjustResize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/bt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/title_bg"
            android:padding="12dp"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>