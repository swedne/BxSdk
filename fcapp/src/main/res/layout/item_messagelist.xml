<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="6dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:paddingBottom="6dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/img_item_messageheadimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/tongzhi" />

            <ImageView
                android:id="@+id/img_yuandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/yuandian" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relativeLayout"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="订单通知"
                    android:textColor="@color/info_text_color"
                    android:textSize="@dimen/txt_size_14sp" />

                <TextView
                    android:id="@+id/tv_item_messagedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2015-10-10 12.11"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_size_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_messagecontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="订单XXXXX，已经发货"
                android:textColor="@color/info_text_color"
                android:textSize="@dimen/txt_size_12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>