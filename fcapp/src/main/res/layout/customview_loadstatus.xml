<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/tv_loding_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/iv_nodata"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loding_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_loding_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/net_error"
                android:gravity="center"
                android:text="@string/net_error2"
                android:textSize="@dimen/txt_size_14sp" />

            <Button
                android:id="@+id/btn_loding_failed"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/tv_loding_failed"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/thirty"
                android:background="@drawable/btn_now_refresh"
                android:paddingBottom="@dimen/eight"
                android:paddingLeft="@dimen/twenty"
                android:paddingRight="@dimen/twenty"
                android:paddingTop="@dimen/eight"
                android:textSize="@dimen/txt_size_14sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>